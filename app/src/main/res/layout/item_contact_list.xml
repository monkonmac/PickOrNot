<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

    <ImageView android:id="@+id/image_contact"
               android:background="@drawable/bg_round_user_icon"
               android:layout_width="40dp"
               android:layout_height="40dp"/>

    <LinearLayout android:id="@+id/container_contact_short_info"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginStart="12dp"
                  android:layout_toEndOf="@id/image_contact">

        <TextView android:id="@+id/tv_name"
                  android:textSize="16sp"
                  android:textColor="#030303"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/tv_number"
                  android:textSize="12sp"
                  android:maxLines="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>